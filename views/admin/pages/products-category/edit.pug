extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main 

    //- +alert-error(5000)

    //- Giao Diện trang tạo mới sản phẩm
    h1(class="mb-4") Edit Product Category 

    form(
        action=`${prefixAdmin}/products-category/edit/${data.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Title
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
                value=data.title
            )
        div(class="form-group")
            label(for="parent_id") Danh mục cha 
            select(
                name="parent_id"
                id="parent_id"
                class="form-control"
            )
                option(value="") -- Chọn danh mục cha --
                if(records)
                    +select-tree(records, 1, data.parent_id)

        div(class="form-group")
            label(for="desc")  Desc
            textarea(
                type="text"
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows="S"
            ) #{data.description}
        div(
            class="form-group"
            upload-image 
        )
            label(for="thumbnail") Image
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input 
            )
            img(
                src=data.thumbnail 
                class="image-preview"
                upload-image-preview 
            )
        div(class="form-group")
            label(for="position") Position 
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                min="1"
                value=data.position
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(data.status == "active" ? true : false)
            )
            label(for="statusActive" class="form-check-label") Online  
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="inactive"
                checked=(data.status == "active" ? true : false)
            )
            label(for="statusInActive" class="form-check-label") Off
        div(class="form-group")
            button(
                type="submit"
                class="btn bnt-primary"
            ) + Update 