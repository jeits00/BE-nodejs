extends ../../layouts/default.pug

block main 
    h1 Product page 

    table.table.table-hover.table-sm
        thead 
            tr 
                th STT 
                th Image 
                th Title  
                th Price
                th Status 
                th Action

        tbody 
            each item, index in products 
                tr 
                    td #{index + 1}
                    td 
                        img(
                            src=item.thumbnail
                            alt=item.title 
                            width="100px"
                            height="auto"
                        )
                    td #{item.title}
                    td #{item.price}$          
                    td 
                        if(item.status == "active")
                            a(href="#" class="badge-success") Online 
                        else 
                            a(href="#" class="badge-danger") Off
                    td 
                        button(class="btn btn-warning btn-btn-sm") Edit  
                        button(class="btn btn-danger btn-sm ml-1") Deleted  
