extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug


block main 
    h1 Product page 

    .card.mb-3 
        .card-header Filter and Search
        .card-body 
            .row 
                .col-6
                    +filter-status(filterStatus)
                .col-6 
                    +search(keyword)
                    
    
    .card.mb-3 
        .card-header List
            .card-body 
                +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)

                table(
                    class="table table-hover table-sm"
                    checkbox-multi 
                )
                    thead 
                        tr 
                            th 
                                input(type="checkbox" name="checkall")
                            th STT 
                            th Image 
                            th Title  
                            th Price
                            th Status 
                            th Action

                    tbody 
                        each item, index in products 
                            tr 
                                td 
                                    input(
                                        type="checkbox"
                                        name="id"
                                        value=item.id
                                    )
                                td #{index + 1}
                                td 
                                    img(
                                        src=item.thumbnail
                                        alt=item.title 
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.title}
                                td #{item.price}$          
                                td 
                                    if(item.status == "active")
                                        a(
                                            href="javascript:;" 
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status
                                            class="badge-success"
                                        ) Online 
                                    else 
                                        a(
                                            href="javascript:;" 
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status 
                                            class="badge-danger"
                                        ) Off
                                td 
                                    button(class="btn btn-warning btn-btn-sm") Edit  
                                    button(class="btn btn-danger btn-sm ml-1") Deleted  

    +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/products/change-status`
    )

    script(src="/admin/js/product.js") 