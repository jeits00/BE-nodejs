extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug

block main 
    h1 Product page 

    .card.mb-3 
        .card-header Filter and Search
        .card-body 
            .row 
                .col-6
                    +filter-status(filterStatus)
                .col-6 
                    +search(keyword)
                    
    
    .card.mb-3 
        .card-header List
            .card-body 
                table.table.table-hover.table-sm
                    thead 
                        tr 
                            th STT 
                            th Image 
                            th Title  
                            th Price
                            th Status 
                            th Action

                    tbody 
                        each item, index in products 
                            tr 
                                td #{index + 1}
                                td 
                                    img(
                                        src=item.thumbnail
                                        alt=item.title 
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.title}
                                td #{item.price}$          
                                td 
                                    if(item.status == "active")
                                        a(href="#" class="badge-success") Online 
                                    else 
                                        a(href="#" class="badge-danger") Off
                                td 
                                    button(class="btn btn-warning btn-btn-sm") Edit  
                                    button(class="btn btn-danger btn-sm ml-1") Deleted  
