extends ../../layouts/default.pug

block main 
    h1 Danh sach san pham

    table.table.table-hover.table-sm
        thead 
            tr 
                th STT 
                th Image 
                th Tieu De 
                th Gia 
                th Trang Thai
                th Hanh Dong

        tbody 

          each item, index in products
            tr 
                td #{index + 1}
                td 
                    img(
                        src=item.thumbnail
                        alt=item.title
                        width="100px"
                        height="auto"
                    )
                td #{item.title}
                td #{item.price}
                td 
                    if (item.status == "active")
                       a(href="#" class="badge-success") Hoat Dong 
                    else 
                       a(href="#" class="badge-success") Dung Hoat Dong 
                td 
                    button(class="btn btn-warning btn-btn-sm") Sua 
                    button(class="btn btn-danger btn-sm ml-1") Xoa 
